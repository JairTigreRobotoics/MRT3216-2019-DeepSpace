#include <Adafruit_NeoPixel.h> //Make sure to install the neopixel library

#define PIN 6 //LED Ring Pin

const int buttonPin = 7;
int buttonState = 0;

Adafruit_NeoPixel ring = Adafruit_NeoPixel(60, PIN, NEO_GRB + NEO_KHZ800);

void setup() {
  
  ring.begin();
  ring.show(); // Initialize all pixels to 'off'
  pinMode(buttonPin, INPUT);  
}

void loop() {
  buttonState = digitalRead(buttonPin);
    // if button is pressed, turn ring on
  if (buttonState == HIGH) {  
    colorWipe(ring.Color(0, 255, 0), 50); // Green
  }
}

// Fill the dots one after the other with a color (Startup sequence)
void colorWipe(uint32_t c, uint8_t wait) {
  for(uint16_t i=0; i<ring.numPixels(); i++) {
    ring.setPixelColor(i, c);
    ring.show();
    delay(wait);
  }
}
